APP_NAME="Rekaz Simple Drive"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# For SQLite (recommended for development - no additional setup required)
DB_CONNECTION=sqlite
DB_DATABASE=/path/to/your/project/database/database.sqlite

# For MySQL (uncomment if needed for production)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=rekaz
# DB_USERNAME=root
# DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ========================================
# STORAGE BACKEND CONFIGURATION
# ========================================
# Choose one: database, local, s3, ftp
STORAGE_BACKEND=database

# Local Storage Configuration (when STORAGE_BACKEND=local)
# Path where files will be stored on local filesystem (relative to project root)
LOCAL_STORAGE_PATH=storage/app/blobs

# S3 Compatible Storage Configuration (when STORAGE_BACKEND=s3)
# IMPORTANT: This implementation uses pure HTTP (no AWS SDK) as per requirements
# For AWS S3, use: https://s3.amazonaws.com
# For MinIO (local development), use: http://localhost:9000
# For DigitalOcean Spaces, use: https://nyc3.digitaloceanspaces.com
S3_ENDPOINT=
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1
# Set to true for MinIO and some S3-compatible services (required for non-AWS)
S3_USE_PATH_STYLE_ENDPOINT=false

# FTP Storage Configuration (when STORAGE_BACKEND=ftp)
# Example: FTP_HOST=192.168.1.100 or ftp.yourdomain.com
FTP_HOST=
# Standard FTP port is 21, FTPS usually uses 990
FTP_PORT=21
# FTP username (create dedicated user for security)
FTP_USERNAME=
# FTP password (use strong password, consider using quotes if special characters)
FTP_PASSWORD=
# Root path on FTP server where files will be stored
# Example: /ftp/files or /uploads or leave empty for user's home directory
FTP_ROOT=/ftp/files
# Use passive mode (recommended for most setups, especially behind firewalls)
FTP_PASSIVE=true
# Enable SSL/TLS encryption (recommended for production)
FTP_SSL=false
